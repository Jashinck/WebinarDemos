<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ValueConverters="clr-namespace:WebinarDemos.Converters"
			 xmlns:effects="clr-namespace:WebinarDemos.RoutingEffects"
             x:Class="WebinarDemos.Pages.PickerEffect">
    <ContentPage.Resources>
        <ResourceDictionary>
            <ValueConverters:StringToColorConverter x:Key="StringToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Picker
        x:Name="picker"
        effects:PickerColorEffect.Color="{Binding SelectedColor, Converter={StaticResource StringToColorConverter}}"
        Title="Choose a Color"
        ItemsSource="{Binding Colors}"
        SelectedItem="{Binding SelectedColor}"
        HorizontalOptions="Fill"
        VerticalOptions="Center"
        >
		
    </Picker>
		
</ContentPage>